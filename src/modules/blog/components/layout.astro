---
import Heading from './heading.astro'
import AppLayout from '$app/components/layout.astro'
import Image from '$core/components/image.astro'

import type { CollectionEntry } from 'astro:content'

export interface Props {
  blog: CollectionEntry<'blog'>
  minutesRead: string
}

const { slug, data } = Astro.props.blog
const { banner, title, subtitle } = data
---

<AppLayout title={title} description={subtitle} image={banner.url}>
  <div class="space-y-6">
    <div class="mx-auto max-w-4xl">
      <div
        class="overflow-hidden rounded-none bg-white shadow-xl dark:bg-[#332940] sm:rounded-2xl"
        style={`view-transition-name: blog-${slug}`}
      >
        <div class="flex items-center justify-center overflow-hidden">
          <Image
            src={banner.url}
            width={banner.width}
            height={banner.height}
            placeholder={banner.placeholder}
            alt="cover"
            fetchPriority="high"
          />
        </div>
        <div class="px-4 py-8 sm:px-6 lg:px-8">
          <Heading {...Astro.props} />

          <article
            class="prose prose-blue mx-auto max-w-3xl pt-6 dark:text-gray-50"
          >
            <slot />
          </article>
        </div>
      </div>
    </div>
  </div>
</AppLayout>
